{
    "manifest_version": 3,
    "name": "AI Web Smart",
    "version": "1.0",
    "description": "Use AI to summarize, rewrite, and chat with any webpage.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["precompiled-styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/logo.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}